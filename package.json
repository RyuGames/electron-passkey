{
    "name": "electron-passkey",
    "version": "0.0.3",
    "description": "A native module to handle WebAuthn passkey operations",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "install": "node-gyp-build",
        "prebuild": "prebuildify --napi",
        "build": "pnpm prebuild && pnpm tsc",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "package:changeset": "changeset",
        "package:version": "changeset version",
        "demo": "node-gyp rebuild && pnpm tsc && electron dist/demo/electron-demo.js"
    },
    "files": [
        "dist/index.d.ts",
        "dist/index.js",
        "dist/index.js.map",
        "binding.gyp",
        "src/lib",
        "prebuilds"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.27.7",
        "@eslint/eslintrc": "^3.1.0",
        "@types/node": "^22.3.0",
        "@typescript-eslint/eslint-plugin": "8.1.0",
        "@typescript-eslint/parser": "8.1.0",
        "@typescript-eslint/typescript-estree": "8.1.0",
        "electron": "^31.4.0",
        "eslint": "9.9.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-lit": "1.14.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-promise": "7.1.0",
        "eslint-plugin-wc": "2.1.0",
        "prebuildify": "6.0.1",
        "prettier": "3.3.3",
        "typescript": "5.5.4"
    },
    "dependencies": {
        "node-addon-api": "^8.1.0",
        "node-gyp": "10.2.0",
        "node-gyp-build": "4.8.1"
    },
    "gypfile": true,
    "engines": {
        "node": ">= 20"
    },
    "prettier": {
        "overrides": [
            {
                "files": [
                    ".prettierrc",
                    ".eslintrc"
                ],
                "options": {
                    "parser": "json"
                }
            }
        ],
        "singleQuote": true
    }
}